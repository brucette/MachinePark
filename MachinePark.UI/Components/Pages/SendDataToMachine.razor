@page "/sendmessage/{MachineId}"
@rendermode InteractiveServer

<div class="container col-8 border">
    <h3>Send a message to the machine</h3>
    @if (!IsSaved)
    {
        <EditForm Model="ReceivedData" 
            OnValidSubmit="OnMessageSubmit" 
            Enhance 
            FormName="AddMessageForm">
            <DataAnnotationsValidator />
            <ValidationSummary></ValidationSummary>

            <div class="row mb-3">
                <div class="col-md-8">
                    <InputText id="message" class="form-control col-md-8" @bind-Value="@ReceivedData.Data" placeholder="Enter message"></InputText>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-outline-secondary ms-1">Submit</button>
            </div>
        </EditForm>
    }
    else
    {
        <h4 class="text-success">@Message</h4>
    }
    
    <NavLink class="btn me-1" href="/">
        <button type="button" class="btn btn-outline-primary">Back to overview</button>
    </NavLink>
</div>
